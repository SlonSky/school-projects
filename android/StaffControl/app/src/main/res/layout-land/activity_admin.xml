<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.slonsky.staffcontrol.AdminActivity">

    <Button
        android:id="@+id/employees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сотрудники"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/shifts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.45"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Администратор"
        style="@style/Header"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/shifts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Смены"
        app:layout_constraintBottom_toTopOf="@+id/exit"
        app:layout_constraintTop_toBottomOf="@+id/employees"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выйти"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shifts"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="410dp" />
</android.support.constraint.ConstraintLayout>
